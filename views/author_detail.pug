extend layout 

block content 
    .author-detail 
        h2 #[strong Author : ] #{authorDetail.name}
        p #[strong !{authorDetail.date_of_birth_format}] - #[em #[strong !{authorDetail.date_of_death_format}]]

        .author-books 
            h3 #[strong Books : ] 
            
            each book in authorBooks 
                .copy
                    p
                        a(href=book.url) #{book.title} 
                    p.left #{book.summary}
            else 
                p You are not having any Books.

        hr.hr

        div.Control(style="display:flex;")
            p 
                button.btn.btn-primary
                    a(href=authorDetail.url+'/delete' style='color:white;') Delete Author

            p()
                button.btn.btn-primary 
                    a(href=authorDetail.url+'/update' style='color:white;') Update Author


