extend layout 

block content 
    

    form(method='POST' action='')
        h1= title 
        div.form-group
            label(for='first_name') First Name: 
            input#first_name.form-control(type='text' placeholder='Enter First Name...' name='first_name' required='true' value=(undefined === author?'' : author.first_name))
            label(for='family_name') Family Name: 
            input#family_name.form-control(type='text' placeholder='Enter Last Name...' name='family_name' required='true' value= (undefined === author?'' : author.surname))
        
        div.form-group
            label(for='date_of_birth') Date of Birth: 
            input#date_of_birth.form-control(type='date' placeholder="dd/mm/yyyy" name='date_of_birth' value=(undefined===author?'':author.date_of_birth_yyyy_mm_dd))
            label(for='date_of_deadth') Date of Death: 
            input#date_of_deadth.form-control(type='date' placeholder='dd/mm/yyyy' name='date_of_deadth' value=(undefined === author ? '' : author.date_of_deadth_yyyy_mm_dd))

        if errors 
            ul 
                for error in errors     
                    li!= error.msg 

        button.btn.btn-primary(type='submit') Submit 
