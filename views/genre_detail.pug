extend layout 

block content 
    div.author-detail 
        h2 Genre: #{genre.name}
        h3 Books 

        each book in genre_books 
            div.copy 
                p 
                    a(href=book.url) #{book.title}
                p #{book.summary}
        
        else    
            p This genre has no books

    hr.hr

    div.Control(style="display:flex;")
        p 
            button.btn.btn-primary
                a(href=genre.url+'/delete' style='color:white;') Delete Genre

        p
            button.btn.btn-primary 
                a(href=genre.url+'/update' style='color:white;') Update Genre


    
